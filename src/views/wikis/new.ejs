<!DOCTYPE html>
<html>

<head>
  <% include ../static/partials/head.ejs %>
</head>

<body>
  <% include ../static/partials/navbar.ejs %>

  <main class="container">
    <h1>New Wiki</h1>
    <!-- #1 -->
    <form action="/wikis/create" method="post">
      <div class="form-group">
        <label for="title">Wiki title</label>
        <input type="text" class="form-control" name="title" aria-describedby="titleHelp" placeholder="Enter Title">
      </div>
      <div class="form-group">
        <label for="body">Wiki body</label>
        <textarea rows="4" class="form-control" name="body" placeholder="Enter Wiki body"></textarea>
      </div>

      <% if(currentUser && (currentUser.role === 1 || currentUser.role === 2)) { %>
      <label for="private">Private Wiki?</label>
      <div class="form-group btn-group btn-group-toggle" data-toggle='buttons'>
        <label class='btn btn-secondary active'>
          <input type="radio" name="private" id="private1" value='false' checked>No
        </label>
        <label class='btn btn-secondary'>
          <input type="radio" name="private" id="private2" value='true'>Yes
        </label>
      </div>
      <% } %>
      <div><button type="submit" class="btn btn-primary">Submit</button></div>
    </form>
  </main>

  <% include ../static/partials/baseScripts.ejs %>

</body>

</html>